generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ============================
   AUTH MODELS
   ============================ */

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

enum Role {
  USER
  ADMIN
}

/* ============================
   STATUS PAGE MODELS
   (we will use later)
   ============================ */

model Service {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ServiceStatus @default(OPERATIONAL)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  incidents   Incident[]

  @@index([status])
}

enum ServiceStatus {
  OPERATIONAL
  DEGRADED
  PARTIAL_OUTAGE
  MAJOR_OUTAGE
}

model Incident {
  id          String   @id @default(cuid())
  title       String
  description String?
  isResolved  Boolean  @default(false)

  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([serviceId])
  @@index([isResolved])
}

